# Create .gitignore
cat > .gitignore << 'EOL'
# Dependencies
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# TypeScript output
dist/
build/

# IDE/Editor specific
.idea/
.vscode/
*.swp
*.swo
.DS_Store

# Environment variables
.env
.env.*
!.env.example

# Coverage output
coverage/

# Logs
logs/
*.log

# Cache directories
.npm/
.eslintcache
.tsbuildinfo
EOL

# Add and commit .gitignore
git add .gitignore
git commit -m "chore: add .gitignore file"